{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@apgms/shared": ["../../shared/dist/index"],
      "@apgms/shared/*": ["../../shared/dist/*"],
      "@apgms/ledger": ["../../packages/ledger/dist/index"],
      "@apgms/ledger/*": ["../../packages/ledger/dist/*"],
      "@apgms/domain-policy": ["../../packages/domain-policy/dist/index"],
      "@apgms/domain-policy/*": ["../../packages/domain-policy/dist/*"],
      "@apgms/ingestion-nats": ["../../packages/ingestion-nats/dist/index"],
      "@apgms/ingestion-nats/*": ["../../packages/ingestion-nats/dist/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["dist"]
}

