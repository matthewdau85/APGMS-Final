{
    "compilerOptions":  {
                            "target":  "ES2020",
                            "module":  "ESNext",
                            "moduleResolution":  "Node",
                            "strict":  true,
                            "esModuleInterop":  true,
                            "skipLibCheck":  true,
                            "resolveJsonModule":  true,
                            "outDir":  "dist",
                            "baseUrl":  ".",
                            "paths":  {
                                          "@apgms/shared/*":  [
                                                                  "shared/src/*"
                                                              ],
                                          "@apgms/shared":  [
                                                                  "shared/src/index.ts"
                                                              ],
                                          "@apgms/feature-flags": [
                                                                  "packages/feature-flags/src/index.ts"
                                                              ],
                                          "@apgms/feature-flags/*": [
                                                                  "packages/feature-flags/src/*"
                                                              ],
                                          "@apgms/events": [
                                                                  "services/events/src/index.ts"
                                                              ],
                                          "@apgms/events/*": [
                                                                  "services/events/src/*"
                                                              ]
                                      },
                            "types":  [
                                          "node",
                                          "jest"
                                      ]
                        }
}
