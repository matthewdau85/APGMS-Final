{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@apgms/shared/*": [
                "shared/src/*"
            ],
            "@apgms/shared": [
                "shared/src/index"
            ],
            "@apgms/domain-policy": [
                "packages/domain-policy/dist/index"
            ]
        },
        "types": [
            "node",
            "jest"
        ]
    }
}
