{
    "compilerOptions":  {
                            "target":  "ES2020",
                            "module":  "ESNext",
                            "moduleResolution":  "Node",
                            "strict":  true,
                            "esModuleInterop":  true,
                            "skipLibCheck":  true,
                            "resolveJsonModule":  true,
                            "outDir":  "dist",
                            "baseUrl":  ".",
                            "paths":  {
                                          "@apgms/shared/*":  [
                                                                  "shared/src/*"
                                                              ],
                                          "@apgms/auth": [
                                                            "packages/auth/src/index.ts"
                                                          ],
                                          "@apgms/auth/*": [
                                                               "packages/auth/src/*"
                                                             ]
                                      },
                            "types":  [
                                          "node",
                                          "jest"
                                      ]
                        }
}
