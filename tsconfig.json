{
    "compilerOptions":  {
                            "target":  "ES2020",
                            "module":  "ESNext",
                            "moduleResolution":  "Node",
                            "strict":  true,
                            "esModuleInterop":  true,
                            "skipLibCheck":  true,
                            "resolveJsonModule":  true,
                            "outDir":  "dist",
                            "baseUrl":  ".",
                            "paths":  {
                                          "@apgms/shared/*":  [
                                                                  "shared/src/*"
                                                              ],
                                          "@apgms/shared":  [
                                                                  "shared/src/index"
                                                              ],
                                          "@apgms/domain-policy": [
                                                                  "packages/domain-policy/src/index"
                                                              ],
                                          "@apgms/banking": [
                                                                  "services/banking/src/index"
                                                              ],
                                          "@apgms/banking/*": [
                                                                  "services/banking/src/*"
                                                              ]
                                      },
                            "types":  [
                                          "node",
                                          "jest"
                                      ]
                        }
}
