DATABASE_URL=postgresql://postgres:postgres@db:5432/apgms?schema=public
SHADOW_DATABASE_URL=postgresql://postgres:postgres@db:5432/apgms_shadow?schema=public

PORT=3000
TAX_ENGINE_URL=http://tax-engine:8000
WEBAPP_PORT=5173
REDIS_URL=redis://redis:6379
# Comma-separated list of admin email addresses authorised for admin APIs
ADMIN_EMAIL_ALLOWLIST=
# Required when running `pnpm exec prisma db seed`
# Must be at least 12 chars and include upper, lower, digit, symbol
SEED_USER_PASSWORD=

# OpenTelemetry tracing (default ships to the managed collector; set to `memory` for tests)
OTEL_TRACES_EXPORTER=otlp
OTEL_EXPORTER_OTLP_ENDPOINT=https://telemetry.apgms.cloud/v1/traces
OTEL_COLLECTOR_HEALTHCHECK_URL=https://telemetry.apgms.cloud/health
OTEL_DIAGNOSTICS_DEBUG=false
