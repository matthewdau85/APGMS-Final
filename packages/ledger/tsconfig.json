{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "moduleDetection": "force",
    "allowJs": true,
    "composite": false,
    "baseUrl": ".",
    "paths": {
      // resolve shared and domain-policy from source
      "@apgms/shared": ["../../shared/src/index"],
      "@apgms/shared/*": ["../../shared/src/*"],
      "@apgms/domain-policy": ["../domain-policy/src/index"],
      "@apgms/domain-policy/*": ["../domain-policy/src/*"]
    }
  },
  "include": ["src"]
}
