    "build": "tsc -p tsconfig.json && cp -r data dist/data || true",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@fastify/cors": "*",
    "@fastify/helmet": "*",
    "cheerio": "^1.1.2",
    "diff": "^5.2.0",
    "fastify": "^5.0.0",
    "p-limit": "^6.2.0",
    "undici": "^6.23.0"
  },
  "devDependencies": {
    "@types/diff": "^5.2.1",
    "@types/node": "^20.12.12",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.10.0"
  }
}
