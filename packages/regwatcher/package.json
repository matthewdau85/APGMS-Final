    "execa": "^9.6.1",
    "fastify": "^5.7.4",
    "p-limit": "^7.3.0",
    "undici": "^7.22.0"
  },
  "devDependencies": {
    "@types/diff": "^8.0.0",
    "@types/node": "^25.3.0",
    "rimraf": "^6.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.10.0"
  }
}
