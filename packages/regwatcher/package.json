{
  "name": "@apgms/regwatcher",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "APGMS ATO change watcher (file-backed snapshots + small API).",
  "license": "UNLICENSED",
  "scripts": {
    "once": "tsx src/run-once.ts",
    "dev": "tsx watch src/server.ts",
