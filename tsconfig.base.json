{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2021", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@apgms/shared": ["shared/src/index"],
      "@apgms/shared/*": ["shared/src/*"],
      // Map domain-policy to source (no dist)
      "@apgms/domain-policy": ["packages/domain-policy/src/index"],
      "@apgms/domain-policy/*": ["packages/domain-policy/src/*"]
    },
    "types": ["node", "jest"]
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
