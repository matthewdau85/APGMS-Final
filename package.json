{
  "name": "apgms",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bootstrap": "pnpm -r install && pnpm -r build",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r --filter '!./apps/apgms-webapp-design...' typecheck",
    "test": "pnpm -r test",
    "run-all": "bash ./scripts/run-all-tests.sh",
    "readiness:all": "node ./scripts/readiness/all.cjs",
    "validate:ato": "node ./scripts/validate-ato-ruleset.mjs",
    "sbom": "pnpm exec cyclonedx-npm -o sbom.xml . || echo \"[sbom] cyclonedx-npm failed, check sbom.xml + logs\"",
    "gitleaks": "gitleaks detect --redact --exit-code 1",
    "trivy": "trivy fs . --severity HIGH,CRITICAL --exit-code 1",
    "sca": "pnpm audit --audit-level=high",
    "test:a11y": "pnpm --filter apgms-webapp test:axe",
    "lint:eol": "bash ./scripts/check-eol.sh",
    "readiness:chain": "bash ./scripts/readiness/run-readiness-chain.sh",
    "e2e": "pnpm --filter apgms-webapp test:e2e --reporter=html --output=playwright-report",
    "e2e:ui": "pnpm --filter apgms-webapp test:e2e --headed --output=playwright-report",
    "e2e:report": "cd webapp && pnpm exec playwright show-report playwright-report",
    "k6:smoke": "bash ./scripts/readiness/run-k6-smoke.sh",
    "regwatcher:once": "pnpm -s --filter @apgms/regwatcher run once",
    "regwatcher:email": "node packages/regwatcher/bin/run.mjs --email --always --json"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "^4.1.2",
    "@playwright/test": "^1.58.2",
    "@prisma/client": "7.3.0",
    "@types/node": "^25.2.2",
    "prisma": "^7.3.0"
  }
}
