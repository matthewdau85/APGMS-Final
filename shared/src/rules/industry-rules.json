{
  "industries": [
    {
      "id": "hospitality_tourism",
      "label": "Hospitality & Tourism",
      "naics": ["7225", "5615", "7121"],
      "smeNotes": [
        "Schedule 2 tables are the default for seasonal SME venues.",
        "ATO consulted tourism SMEs in Q2 to confirm GST input credit treatment for bundled experiences.",
        "Remote resorts often receive concessional GST where 50% of payroll is tied to remote operations."
      ],
      "schedules": [
        {
          "id": "hospitality_paygw_casual",
          "taxType": "PAYGW",
          "basis": "payroll",
          "frequency": "weekly",
          "calculation": {
            "type": "progressive",
            "tiers": [
              { "upTo": 1349, "base": 0, "rate": 0.155 },
              { "upTo": 2599, "base": 208, "rate": 0.32 },
              { "upTo": null, "base": 608, "rate": 0.37 }
            ]
          },
          "metadata": {
            "scheduleRef": "PAYGW Schedule 2",
            "atoSource": "NAT 1005",
            "notes": [
              "Used by SME cafes and venues with transient rosters.",
              "Tiered rates align with PAYGW Schedule 2 casual coefficients."
            ]
          }
        },
        {
          "id": "hospitality_paygw_salary",
          "taxType": "PAYGW",
          "basis": "payroll",
          "frequency": "weekly",
          "calculation": {
            "type": "progressive",
            "tiers": [
              { "upTo": 1150, "base": 0, "rate": 0.13 },
              { "upTo": 2300, "base": 150, "rate": 0.28 },
              { "upTo": null, "base": 470, "rate": 0.34 }
            ]
          },
          "metadata": {
            "scheduleRef": "PAYGW Schedule 1 - Scale 2",
            "atoSource": "NAT 1004",
            "notes": [
              "Applied to full-time venue management and salaried staff.",
              "Uses scale 2 coefficients with tax-free threshold claimed."
            ]
          }
        },
        {
          "id": "hospitality_gst_standard",
          "taxType": "GST",
          "basis": "revenue",
          "frequency": "monthly",
          "calculation": {
            "type": "percentage",
            "rate": 0.1,
            "threshold": 75000,
            "minimum": 0
          },
          "metadata": {
            "scheduleRef": "GST General Registration",
            "atoSource": "ATO QC 15954",
            "notes": [
              "Applies to food, beverage and accommodation packages.",
              "Excludes input-taxed supplies such as residential rent."
            ]
          }
        }
      ],
      "exemptions": [
        {
          "id": "seasonal_casual_discount",
          "description": "Seasonal rosters where casual hours are 35% or less of the annual total receive the SME concession agreed with tourism bodies.",
          "condition": { "field": "seasonalRatio", "operator": "lte", "value": 0.35 },
          "effect": { "type": "rate_discount", "multiplier": 0.85 },
          "appliesTo": ["hospitality_paygw_casual"]
        },
        {
          "id": "remote_resort_gst_relief",
          "description": "Resorts with 50% or more of payroll in remote locations may halve GST on bundled packages due to limited input credits.",
          "condition": { "field": "remoteWorkforcePercent", "operator": "gte", "value": 0.5 },
          "effect": { "type": "rate_discount", "multiplier": 0.5 },
          "appliesTo": ["hospitality_gst_standard"]
        },
        {
          "id": "micro_operator_gst_exemption",
          "description": "Operators with turnover below the registration threshold remain exempt from charging GST.",
          "condition": { "field": "annualTaxableTurnover", "operator": "lt", "value": 75000 },
          "effect": { "type": "suspend" },
          "appliesTo": ["hospitality_gst_standard"]
        }
      ]
    },
    {
