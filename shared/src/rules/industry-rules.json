          "calculation": {
            "type": "progressive",
            "tiers": [
              { "upTo": 1700, "base": 0, "rate": 0.18 },
              { "upTo": 3400, "base": 306, "rate": 0.36 },
              { "upTo": null, "base": 926, "rate": 0.395 }
            ]
          },
          "metadata": {
            "scheduleRef": "PAYGW Schedule 13",
            "atoSource": "NAT 1023",
            "notes": [
              "Used for voluntary agreements with sole traders.",
              "Assumes 30% uplift for tools and travel allowances."
            ]
          }
        },
        {
          "id": "construction_gst_progress",
          "taxType": "GST",
          "basis": "revenue",
          "frequency": "quarterly",
          "calculation": {
            "type": "percentage",
            "rate": 0.1,
            "threshold": 75000,
            "minimum": 0
          },
          "metadata": {
            "scheduleRef": "GST Progress Claim Method",
            "atoSource": "QC 22069",
            "notes": [
              "Progressive claims based on taxable supplies.",
              "Includes attribution of GST on holdbacks and retentions."
            ]
          }
        }
      ],
      "exemptions": [
        {
          "id": "apprentice_offset",
          "description": "SMEs with two or more active apprentices can reduce taxable payroll used for PAYGW by $800 per cycle.",
          "condition": { "field": "apprenticeCount", "operator": "gte", "value": 2 },
          "effect": { "type": "amount_discount", "amount": 800 },
          "appliesTo": ["construction_paygw_apprentice"]
        },
        {
          "id": "remote_allowance_discount",
          "description": "Regional projects where 40% of workforce is remote may discount PAYGW rate by 10% to reflect zone offsets.",
          "condition": { "field": "remoteWorkforcePercent", "operator": "gte", "value": 0.4 },
          "effect": { "type": "rate_discount", "multiplier": 0.9 },
          "appliesTo": ["construction_paygw_contractor"]
        },
        {
          "id": "export_project_zero_gst",
          "description": "Modular builds with export ratio of 70% or higher can zero-rate GST under the export concession.",
          "condition": { "field": "exportRatio", "operator": "gte", "value": 0.7 },
          "effect": { "type": "suspend" },
          "appliesTo": ["construction_gst_progress"]
        }
      ]
    },
