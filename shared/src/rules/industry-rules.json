        },
        {
          "id": "remote_health_loading",
          "description": "Rural clinics with 45% remote workforce may reduce PAYGW base by $600 to mirror zone rebates.",
          "condition": { "field": "remoteWorkforcePercent", "operator": "gte", "value": 0.45 },
          "effect": { "type": "amount_discount", "amount": 600 },
