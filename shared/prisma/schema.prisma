// FILE: shared/Prisma/schema.prisma

// Generator + datasource (keep yours if already defined)
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========== Enums ==========
enum BasPeriodStatus {
  DRAFT
  READY_TO_LODGE
  LODGED
  PAID
  PARTIALLY_PAID
  SHORTFALL
}

enum AccountType {
  OPERATING
  PAYGW_TAX
  GST_TAX
  ESCROW
}

enum AccountStatus {
  ACTIVE
  CLOSED
  SUSPENDED
}

enum AlertSeverity {
  INFO
  WARNING
  HIGH
  CRITICAL
}

enum TaxObligationType {
  PAYGW
  GST
}

// ========== Core Models (merge with your existing ones) ==========

model Organisation {
  id           String  @id @default(cuid())
  name         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  accounts     Account[]
  basPeriods   BasPeriod[]
  journal      JournalEntry[]
  evidence     EvidenceArtifact[]
  alerts       Alert[]
  mappings     DesignatedAccountMapping[]
}

model Account {
  id            String        @id @default(cuid())
  orgId         String
  organisation  Organisation  @relation(fields: [orgId], references: [id], onDelete: Cascade)

  name          String
  type          AccountType
  status        AccountStatus @default(ACTIVE)

  // Designated account flag for policy engine ease-of-use
  isDesignated  Boolean       @default(false)

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([orgId, type])
}

model DesignatedAccountMapping {
  id                 String            @id @default(cuid())
  orgId              String
  organisation       Organisation      @relation(fields: [orgId], references: [id], onDelete: Cascade)
  obligationType     TaxObligationType
  designatedAccountId String

  createdAt          DateTime          @default(now())

  @@unique([orgId, obligationType])
}

model BasPeriod {
  id            String          @id @default(cuid())
  orgId         String
  organisation  Organisation    @relation(fields: [orgId], references: [id], onDelete: Cascade)

  periodStart   DateTime
  periodEnd     DateTime
  dueDate       DateTime
  status        BasPeriodStatus @default(DRAFT)

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([orgId, periodStart, periodEnd])
}

model JournalEntry {
  id            String        @id @default(cuid())
  orgId         String
  organisation  Organisation  @relation(fields: [orgId], references: [id], onDelete: Cascade)

  occurredAt    DateTime
  debitAccountId String
  creditAccountId String
  amountCents   Int

  // Optional foreign links
  basPeriodId   String?
  basPeriod     BasPeriod?     @relation(fields: [basPeriodId], references: [id])
  sourceId      String?        // e.g., payroll run id, POS batch id

  evidenceId    String?
  evidence      EvidenceArtifact? @relation(fields: [evidenceId], references: [id])

  createdAt     DateTime       @default(now())

  @@index([orgId, occurredAt])
}

model EvidenceArtifact {
  id            String        @id @default(cuid())
  orgId         String
  organisation  Organisation  @relation(fields: [orgId], references: [id], onDelete: Cascade)

  tag           String        // e.g., designated-reconciliation, schema-alignment
  payload       Json
  sha256        String
  wormUri       String?       // reference to immutable store

  createdAt     DateTime      @default(now())

  @@index([orgId, createdAt])
}

model AuditLog {
  id         String   @id @default(cuid())
  orgId      String
  actorId    String
  action     String
  metadata   Json
  hash       String   @unique
  prevHash   String?
  occurredAt DateTime @default(now())
}

model Alert {
  id            String        @id @default(cuid())
  orgId         String
  organisation  Organisation  @relation(fields: [orgId], references: [id], onDelete: Cascade)

  type          String        // e.g., DESIGNATED_WITHDRAWAL_ATTEMPT, DESIGNATED_FUNDS_SHORTFALL
  severity      AlertSeverity @default(WARNING)
  message       String
  metadata      Json
  resolved      Boolean       @default(false)
  resolvedAt    DateTime?

  createdAt     DateTime      @default(now())

  @@index([orgId, createdAt])
}

// Idempotency example
model WriteGuard {
  id               String   @id @default(cuid())
  orgId            String
  idempotencyKey   String
  occurredAt       DateTime @default(now())

  @@unique([orgId, idempotencyKey])
}
