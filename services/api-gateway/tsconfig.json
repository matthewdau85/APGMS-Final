{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2023"],
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },

  "include": [
    "src/app.ts",
    "src/index.ts",
    "src/config.ts",
    "src/lib/**/*.ts",
    "src/security/**/*.ts",
    "src/types/**/*.d.ts"
  ],

  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules",
    "dist"
  ]
}
