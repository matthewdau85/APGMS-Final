{
  "name": "@apgms/api-gateway",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "jest --config ./jest.config.mjs",
    "test:node": "if ls test/*.node.* >/dev/null 2>&1; then node --test ./test/*.node.*; else echo \"[test:node] no .node.* files, skipping\"; fi",
    "check:coverage": "node ./scripts/check-coverage.mjs",
    "db:generate": "node ../../scripts/ensure-linux.mjs && prisma generate --schema=../../infra/prisma/schema.prisma",
    "db:migrate:dev": "prisma migrate dev --schema=../../infra/prisma/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=../../infra/prisma/schema.prisma",
    "db:reset": "prisma migrate reset --schema=../../infra/prisma/schema.prisma",
    "db:seed": "prisma db seed --schema=../../infra/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=../../infra/prisma/schema.prisma",
    "prisma:generate": "pnpm db:generate",
    "prisma:migrate": "pnpm db:migrate:dev",
    "assess:all": "node ../../assessment/assessor-10of10/scripts/apgms-assess.cjs --all --req ../../assessment/assessor-10of10/docs/assessor/requirements.v4.1.json --outdir ../../assessment/reports",
    "readiness:all": "pnpm -C ../.. assess:all"
  },
  "dependencies": {
    "@apgms/connectors": "workspace:*",
    "@apgms/domain-policy": "workspace:*",
    "@apgms/shared": "workspace:*",
    "@aws-sdk/client-secrets-manager": "^3.990.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@node-rs/argon2": "^2.0.2",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.212.0",
    "@opentelemetry/resources": "^2.5.1",
    "@opentelemetry/sdk-node": "^0.212.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "@prisma/client": "7.4.0",
    "@simplewebauthn/server": "^13.2.2",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.3.1",
    "fastify": "^5.7.4",
    "fastify-plugin": "^5.1.0",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.3",
    "nats": "^2.29.3",
    "prom-client": "^15.1.3",
    "redis": "^5.10.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "^4.1.2",
    "@swc/core": "^1.15.11",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/supertest": "^6.0.3",
    "prisma": "7.4.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0"
  }
}
